<!-- Setup the main.handlebars file so it's able to be used by Handlebars.
Setup the index.handlebars to have the template that Handlebars can render onto.
Create a button in index.handlebars that will submit the user input into the database. -->

<div class="container">
  <div class="row">
    <div class="col-md-12" id="top-bar">
      <h1>Want a <p>veggie</p> burger?</h1>
    </div>
    <div class="col-md-6" class="task">
      <div class="row">
        {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="col-md-9 textcenter">
          <pre>
            {{this.id}}. {{this.burger_name}}
          </pre>
        </div>
        <div class="col-md-3 text-center">
          <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
            <input type="hidden" name="id" type="text" value={{this.id}}>
            <br>
            <button type="submit" class="btn btn-default">DEVOUR. IT.</button>
          </form>
        </div>
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-md-3 text-center" class="task">
      {{#each burger_data}}
      {{#if this.devoured}}
      <form method="POST" action="/burgers/spit?_method=PUT" class="button-size">
        <input class="form-control" name="burger_name" value="{{this.burger_name}}" type="text" readonly>
        <button type="submit" class="btn btn-default barfBtn">Spit it out!</button>
      </form>
      {{/if}}
      {{/each}}
    </div>

  </div>

</div>

<div class="container">
  <div class="row">
    <div class="col-md-3 text-center enter_section">
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" id="enter_text">
        <button type="submit" class="btn btn-primary" id="text-enter-button">ORDER</button>
      </form>
      <p>Click order for more veggie burgz to devour NOMNOM!</p>
    </div>

  </div>

</div>
